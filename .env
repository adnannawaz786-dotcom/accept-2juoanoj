# Environment Variables for Accept App

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# File Upload Configuration
VITE_MAX_FILE_SIZE=50000000
VITE_MAX_FILES_PER_BATCH=10
VITE_ALLOWED_FILE_TYPES=application/json,text/plain

# ZIP Conversion Settings
VITE_DEFAULT_ZIP_NAME=converted-files
VITE_COMPRESSION_LEVEL=6

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# UI Configuration
VITE_THEME=light
VITE_ANIMATION_DURATION=300

# Feature Flags
VITE_ENABLE_BATCH_CONVERSION=true
VITE_ENABLE_FILE_VALIDATION=true
VITE_ENABLE_PROGRESS_TRACKING=true

# Security
VITE_ENABLE_FILE_TYPE_VALIDATION=true
VITE_ENABLE_FILE_SIZE_VALIDATION=true